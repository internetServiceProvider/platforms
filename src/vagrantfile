# -- mode: ruby --
# vi: set ft=ruby :

Vagrant.configure("2") do |config|
  config.vm.define "kea-dhcp", autostart: false do |dhcp|
    dhcp.vm.box = "ubuntu/jammy64"
    dhcp.vm.hostname = "dhcp"
    dhcp.vm.network "public_network" , type: "dhcp"
    dhcp.vm.network "private_network", type: "static", ip: "192.168.200.2" #ajustar dependiendo el pool de direcciones
    dhcp.vm.provider "virtualbox" do |vb|
     vb.customize ["modifyvm", :id, "--memory", "512", "--cpus", "1", "--name", "kea-dhcp"]
    end
    dhcp.vm.provision "shell", inline: "sudo apt-get update"
    dhcp.vm.provision "shell", inline: "sudo apt-get install mariadb-server kea-dhcp4-server kea-admin -y"
  end  
  
end